<div class="col-lg-12">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Имя</th>
      <th>Email</th>
      <th>Заказов</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.orders.count %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
