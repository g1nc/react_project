    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills float-right">
            <li class="nav-item">
              <%= link_to 'Главная', root_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Код', code_orders_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </nav>
        <h3 class="text-muted">Project name</h3>
      </div>

      <div class="row marketing">
        <div class="col-lg-6 offset-lg-3">
          <% if notice.present? %><p><%= notice %></p><% end %>
          <% if alert.present? %><p><%= alert %></p><% end %>
          <!-- <div id="app" data-notice="<%= notice %>" data-alert="<%= alert %>"></div>
          <%= javascript_pack_tag 'application' %> -->
          <%= yield %>
        </div>
      </div>
