<!DOCTYPE html>
<html>
  <head>
    <title>ReactRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills float-right">
            <li class="nav-item">
              <%= link_to 'Главная', root_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to 'Исполнители', users_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Заказы', orders_path, class: 'nav-link' %>
                </li>
              <% end %>
              <li class="nav-item">
                <%= link_to 'Код', code_orders_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </nav>
        <h3 class="text-muted">Project name</h3>
      </div>

      <div class="row marketing">
        <% if notice.present? %><p><%= notice %></p><% end %>
        <% if alert.present? %><p><%= alert %></p><% end %>
        <!-- <div id="app" data-notice="<%= notice %>" data-alert="<%= alert %>"></div>
        <%= javascript_pack_tag 'application' %> -->
        <%= yield %>
      </div>
    </div>
  </body>
</html>
